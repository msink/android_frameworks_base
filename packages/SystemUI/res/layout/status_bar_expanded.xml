<com.android.systemui.statusbar.phone.NotificationPanelView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:systemui="http://schemas.android.com/apk/res/com.android.systemui"
    android:id="@+id/notification_panel"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:paddingTop="@dimen/notification_panel_padding_top"
    android:layout_marginLeft="@dimen/notification_panel_margin_left"
    >

    <View
        android:id="@+id/handle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/close_handle_height"
        android:visibility="invisible"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/close_handle_underlap"
        android:orientation="vertical"
        android:animateLayoutChanges="false"
        >

        <include layout="@layout/status_bar_expanded_header"
            android:layout_width="match_parent"
            android:layout_height="@dimen/notification_panel_header_height"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                >
                <LinearLayout
                    android:id="@+id/linearlayout_wifi_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/notification_button_background"
                    android:focusable="true"
                    >
                    <ToggleButton
                        android:id="@+id/togglebutton_wifi_switch"
                        android:layout_width="@dimen/notification_panel_header_imagebutton_size"
                        android:layout_height="@dimen/notification_panel_header_imagebutton_size"
                        android:textOn="@null"
                        android:textOff="@null"
                        android:background="@drawable/wifi_switch_background"
                        android:focusable="false"
                        />
                </LinearLayout>

                <ImageButton
                    android:id="@+id/button_wifi_settings"
                    android:layout_width="@dimen/notification_panel_header_imagebutton_size"
                    android:layout_height="@dimen/notification_panel_header_imagebutton_size"
                    android:layout_marginLeft="30dp"
                    android:layout_toRightOf="@id/linearlayout_wifi_switch"
                    android:layout_alignTop="@id/linearlayout_wifi_switch"
                    android:src="@drawable/ic_wifi_settings"
                    android:scaleType="fitXY"
                    android:background="@drawable/notification_button_background"
                    />

                <LinearLayout
                    android:id="@+id/layout_custom_volume_control"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/linearlayout_wifi_switch"
                    android:layout_alignParentRight="true"
                    >
                    <ImageButton
                        android:id="@+id/imagebutton_volume_down"
                        android:layout_width="@dimen/notification_panel_header_imagebutton_size"
                        android:layout_height="@dimen/notification_panel_header_imagebutton_size"
                        android:layout_marginRight="30dp"
                        android:src="@drawable/volume_down"
                        android:scaleType="fitXY"
                        android:background="@drawable/notification_button_background"
                        android:contentDescription="@drawable/volume_down"
                        />
                    <ImageButton
                        android:id="@+id/imagebutton_volume_add"
                        android:layout_width="@dimen/notification_panel_header_imagebutton_size"
                        android:layout_height="@dimen/notification_panel_header_imagebutton_size"
                        android:layout_marginRight="40dp"
                        android:src="@drawable/volume_add"
                        android:scaleType="fitXY"
                        android:background="@drawable/notification_button_background"
                        android:contentDescription="@drawable/volume_add"
                        />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@*android:color/black"
            />

        <LinearLayout
            android:id="@+id/layout_light_control"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >
            <ToggleButton
                android:id="@+id/togglebutton_light_switch"
                android:layout_width="@dimen/notification_panel_header_imagebutton_size"
                android:layout_height="@dimen/notification_panel_header_imagebutton_size" android:layout_marginLeft="15dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:textOn="@null"
                android:textOff="@null"
                android:background="@drawable/togglebutton_light_background"
                android:focusable="true"
                />
            <ImageView
                android:id="@+id/imageview_line"
                android:layout_width="13dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:background="@drawable/light_cut_off_line"
                android:contentDescription="@drawable/light_cut_off_line"
                />
            <ImageButton
                android:id="@+id/imagebutton_light_down"
                android:layout_width="@dimen/notification_panel_header_imagebutton_size"
                android:layout_height="@dimen/notification_panel_header_imagebutton_size"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/light_down"
                android:scaleType="fitCenter"
                android:background="@drawable/focus_button_background"
                android:contentDescription="@drawable/light_down"
                />
            <RatingBar
                android:id="@+id/ratingbar_light_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:numStars="50"
                android:stepSize="1"
                style="@style/LightSettingsRatingBarStyle"
                />
            <ImageButton
                android:id="@+id/imagebutton_light_add"
                android:layout_width="@dimen/notification_panel_header_imagebutton_size"
                android:layout_height="@dimen/notification_panel_header_imagebutton_size"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/focus_button_background"
                android:src="@drawable/light_add"
                android:scaleType="fitCenter"
                android:contentDescription="@drawable/light_add"
                />
        </LinearLayout>

        <TextView
            android:background="#ff000000"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            />

        <TextView
            android:id="@+id/emergency_calls_only"
            android:textAppearance="@style/TextAppearance.StatusBar.Expanded.Network.EmergencyOnly"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:padding="4dp"
            android:gravity="center"
            android:visibility="gone"
            />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ViewStub android:id="@+id/flip_settings_stub"
                android:layout="@layout/flip_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
    
            <ScrollView
                android:id="@+id/scroll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fadingEdge="none"
                android:overScrollMode="ifContentScrolls"
                >
                <com.android.systemui.statusbar.policy.NotificationRowLayout
                    android:id="@+id/latestItems"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    systemui:rowHeight="@dimen/notification_row_min_height"
                    android:background="@android:color/white"
                    />
            </ScrollView>
        </FrameLayout>
    </LinearLayout>
</com.android.systemui.statusbar.phone.NotificationPanelView><!-- end of sliding panel -->
