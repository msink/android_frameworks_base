<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="18dip"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:padding="10dip"
        android:gravity="center_vertical"
        android:background="@drawable/util_header_bg"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dip"
            android:textSize="27sp"
            android:textColor="#ffffffff"
            android:text="@string/usb_storage_notification_title"
            />
    </LinearLayout>
    <TextView android:id="@+id/usb_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/usbconnected"
        />
    <TextView android:id="@+id/usb_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/usb_icon"
        android:layout_centerHorizontal="true"
        android:paddingTop="150dip"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="#ff000000"
        android:text="@string/connected_computer"
        />
</RelativeLayout>
