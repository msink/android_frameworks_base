<com.android.systemui.statusbar.ExpandedView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:descendantFocusability="afterDescendants"
    android:background="@drawable/item_bg"
    android:focusable="true"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="3dp"
        android:paddingBottom="5dp"
        android:paddingRight="3dp"
        android:background="@drawable/title_bar_portrait"
        >

        <com.android.systemui.statusbar.CarrierLabel android:id="@+id/carrierlabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_centerVertical="true"
            android:paddingLeft="4dp"
            android:singleLine="true"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ff000000"
            />

        <com.android.systemui.statusbar.DateView android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:singleLine="true"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold"
            />

        <TextView android:id="@+id/clear_all_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="1dp"
            android:layout_gravity="center"
            android:layout_toLeftOf="@id/date"
            android:layout_centerVertical="true"
            android:paddingLeft="15dp"
            android:paddingTop="5dp"
            android:paddingRight="15dp"
            android:paddingBottom="5dp"
            style="?android:attr/buttonStyle"
            android:background="@drawable/button_background_drawable"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ff000000"
            android:text="@string/status_bar_clear_all_button"
            />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >

            <ImageButton android:id="@+id/imagebutton_refresh_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/notification_button_background"
                android:scaleType="fitCenter"
                android:src="@drawable/refresh_light"
                android:contentDescription="@drawable/refresh_light"
                />

            <LinearLayout android:id="@+id/linearlayout_wifi_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/imagebutton_refresh_mode"
                android:background="@drawable/notification_button_background"
                android:focusable="true"
                >

                <ToggleButton android:id="@+id/togglebutton_wifi_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/wifi_switch_background"
                    android:textOn="@null"
                    android:textOff="@null"
                    android:focusable="false"
                    />

            </LinearLayout>

            <ImageButton android:id="@+id/button_wifi_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@id/linearlayout_wifi_switch"
                android:layout_alignTop="@id/linearlayout_wifi_switch"
                android:background="@drawable/notification_button_background"
                android:src="@drawable/ic_wifi_settings"
                />

            <ImageButton android:id="@+id/imagebutton_volume_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="40dp"
                android:layout_alignTop="@id/linearlayout_wifi_switch"
                android:layout_alignParentRight="true"
                android:scaleType="fitCenter"
                android:background="@drawable/notification_button_background"
                android:src="@drawable/volume_add"
                android:contentDescription="@drawable/volume_add"
                />

            <ImageButton android:id="@+id/imagebutton_volume_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:layout_toLeftOf="@id/imagebutton_volume_add"
                android:layout_alignTop="@id/linearlayout_wifi_switch"
                android:scaleType="fitCenter"
                android:background="@drawable/notification_button_background"
                android:src="@drawable/volume_down"
                android:contentDescription="@drawable/volume_down"
                />

        </RelativeLayout>

        <TextView android:id="@+id/textview_line"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@*android:color/black"
            />

        <LinearLayout android:id="@+id/linearlayout_light_panel"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

            <LinearLayout android:id="@+id/linearlayout_light_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:padding="2dp"
                android:background="@drawable/notification_button_background"
                android:focusable="true"
                >

                <ToggleButton android:id="@+id/togglebutton_light_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/togglebutton_light_background"
                    android:textOn="@null"
                    android:textOff="@null"
                    android:focusable="false"
                    />

            </LinearLayout>

            <ImageView android:id="@+id/imageview_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:src="@drawable/light_cut_off_line"
                android:contentDescription="@drawable/light_cut_off_line"
                />

            <ImageButton android:id="@+id/imagebutton_light_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="21dp"
                android:scaleType="fitCenter"
                android:background="@drawable/notification_button_background"
                android:src="@drawable/light_down"
                android:contentDescription="@drawable/light_down"
                />

            <RatingBar android:id="@+id/ratingbar_light_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="50"
                android:stepSize="1"
                android:background="@drawable/notification_button_background"
                style="@style/LightSettingsRatingBarStyle"
                android:focusable="false"
                />

            <ImageButton android:id="@+id/imagebutton_light_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="21dp"
                android:layout_marginRight="26dp"
                android:scaleType="fitCenter"
                android:background="@drawable/notification_button_background"
                android:src="@drawable/light_add"
                android:contentDescription="@drawable/light_add"
                />

        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        >

        <ScrollView android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="ifContentScrolls"
            android:fadingEdge="none"
            >

            <com.android.systemui.statusbar.NotificationLinearLayout
                android:id="@+id/notificationLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView android:id="@+id/noNotificationsTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:background="@drawable/shade_bgcolor"
                    android:textSize="25sp"
                    android:textColor="#ffffffff"
                    android:text="@string/status_bar_no_notifications_title"
                    />

                <TextView android:id="@+id/ongoingTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:background="@drawable/shade_bgcolor"
                    android:textSize="25sp"
                    android:textColor="#ffffffff"
                    android:text="@string/status_bar_ongoing_events_title"
                    />

                <LinearLayout android:id="@+id/ongoingItems"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    />

                <TextView android:id="@+id/latestTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:background="@drawable/shade_bgcolor"
                    android:textSize="25sp"
                    android:text="@string/status_bar_latest_events_title"
                    />

                <LinearLayout android:id="@+id/latestItems"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    />

            </com.android.systemui.statusbar.NotificationLinearLayout>

        </ScrollView>

    </FrameLayout>

</com.android.systemui.statusbar.ExpandedView>
